            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>unfiled$public/Contact_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Contact.Approval_Status__c</field>
            <operation>equals</operation>
            <value>In-progress</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contact.From_Community__c</field>
